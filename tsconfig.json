{
  "compilerOptions": {
    "outDir": "./lib/",
    "rootDir": "src",
    "composite": true,
    "declaration": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "lib": ["es2018", "es5", "dom"],
    "strict": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "target": "es2018"
  },
  "include": ["src/*"],
  "exclude": ["node_modules"]
}
